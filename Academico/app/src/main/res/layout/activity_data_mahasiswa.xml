<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DataMahasiswaActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgroundDataMhs"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="7dp"
        android:text="Pilih Salah Satu Mahasiswa Bimbingan Anda"
        android:gravity="center"
        android:textColor="@color/colorPrimary" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_data_mahasiswa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_mahasiswa_bimbingan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

</RelativeLayout>
