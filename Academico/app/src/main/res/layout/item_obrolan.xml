<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/IV_fotoObrolan"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <ProgressBar
                android:id="@+id/PB_progresObrolan"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namaChatroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:text="Nama Chatroom"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pesanTerakhir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesan Terakhir" />

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/RL_warnaObrolan"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/warnaBiruTua2">

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>